                app:layout_constraintBottom_toTopOf="@+id/rv_nowPlaying"/>
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


